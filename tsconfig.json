{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "test", "docs", "src"]
}
